<?xml version="1.0" encoding="utf-8"?>
<!--
  Updated to MaterialComponents Theme
-->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- 개별 아이템 스타일 -->
  <style name="DriveLensItem">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">15dp</item>
  </style>

  <style name="RoProperty">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
  </style>

  <style name="PropertyListTitle">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
  </style>

  <style name="PropertyListItem">
    <item name="android:minHeight">32dp</item>
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
  </style>

  <!-- Toggle 스타일 -->
  <style name="GridPropertyToggle" parent="@style/PropertyToggle.Medium"/>

  <style name="PropertyToggle.Large">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
  </style>

  <style name="PropertyToggle.Medium">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
  </style>

  <style name="PropertyToggle">
    <item name="android:textOn"></item>
    <item name="android:textOff"></item>
    <item name="android:layout_width">@dimen/gridPropertyWidth</item>
    <item name="android:layout_height">@dimen/gridPropertyHeight</item>
    <item name="android:gravity">center</item>
    <item name="android:text">" "</item>
  </style>

  <!-- 버튼 -->
  <style name="LiveViewContinueButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
  </style>

  <!-- 라벨 -->
  <style name="StreamItemLabel">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
  </style>

  <!-- 메인 테마 -->
  <style name="Theme.RYC" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Material 색상 -->
    <item name="colorPrimary">@color/md_theme_primary</item>
    <item name="colorPrimaryVariant">@color/md_theme_primary_dark</item>
    <item name="colorOnPrimary">@color/md_theme_on_primary</item>

    <item name="colorSecondary">@color/md_theme_secondary</item>
    <item name="colorSecondaryVariant">@color/md_theme_secondary_dark</item>
    <item name="colorOnSecondary">@color/md_theme_on_secondary</item>

    <!-- 배경 -->
    <item name="android:windowBackground">@drawable/window_background</item>

    <!-- Toolbar 스타일 적용 -->
    <item name="toolbarStyle">@style/Theme.ActionBar.RYC</item>
  </style>

  <!-- Toolbar 스타일 -->
  <style name="Theme.ActionBar.RYC" parent="Widget.MaterialComponents.Toolbar">
    <item name="android:background">?attr/colorPrimary</item>
    <item name="titleTextColor">?attr/colorOnPrimary</item>
  </style>

</resources>
